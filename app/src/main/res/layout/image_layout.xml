<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<include layout="@layout/toolbar"
     />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/headerImage"
        android:layout_marginTop="55dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="New Text"
        android:id="@+id/markerTitle"
        android:layout_below="@+id/headerImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:layout_marginLeft="25dp"
        android:layout_toLeftOf="@+id/fav"
        android:layout_toStartOf="@+id/fav" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/fav"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/markerTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/markerSnippet"
        android:layout_below="@+id/markerTitle"
        android:layout_alignLeft="@+id/markerTitle"
        android:layout_alignStart="@+id/markerTitle" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/call"
        android:layout_alignBottom="@+id/markerSnippet"
        android:layout_toRightOf="@+id/markerTitle"
        android:layout_toEndOf="@+id/markerTitle"
        android:src="@drawable/callimage"/>


</RelativeLayout>